@model IEnumerable<HRS.Models.Role>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout - CP.cshtml";
}

<style>
    Table, th, td {
        border: 1px solid black;
    }

        /*tr:hover
    {
        background-color:lightblue;
    }*/

        tr:nth-child(2n+1) {
            background-color: lightblue;
        }

    th {
        background-color: forestgreen;
        color: white;
    }

    h2 {
        background-color: lightblue;
    }
</style>

<h2 class="breadcrumb" style="background-color:lightblue">
     Role Information Index
</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-info" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
