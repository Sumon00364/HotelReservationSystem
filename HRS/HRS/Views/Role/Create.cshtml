@model HRS.Models.Role

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout - CP.cshtml";
}

<style>
    h2 {
        background-color: lightblue;
    }
</style>

<h2 style="text-align:center">Create Role</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h2>Role</h2>
        <hr />
        @Html.ValidationSummary(true)
        <div class="container" style="background-color:aliceblue">
            <div class="form-group">
                @Html.LabelFor(model => model.Name, new { @class = " " })
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Enter your name....", type = "text" })
                @Html.ValidationMessageFor(model => model.Name)
            </div>

            <div class="container">
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>
            </div>
            <div>
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-info" })
            </div>
            <br/>
        </div>
    </div>
}


