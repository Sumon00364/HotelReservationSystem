@model IEnumerable<HRS.Models.Services>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout - CP.cshtml";
}

<style>
    Table, th, td {
        border: 1px solid black;
    }

    /*tr:hover
    {
        background-color:lightblue;
    }*/

    tr:nth-child(2n+1) {
        background-color: lightblue;
    }

    th {
        background-color: forestgreen;
        color: white;
    }

    h2 {
        background-color: lightblue;
        text-align: center;
    }
</style>

<h2>Service Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-info" })
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Images.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Images.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
